<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Typewriter Text Example</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap");
        .typewriter-container {
            background-color: black;
            color: white;
            font-family: "Lato", sans-serif;
            padding: 10px;
            margin: auto;
            width: 20%;
            height: auto;
            min-height: 50px;
            max-height: 1000px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            overflow-y: auto;
            border-radius: 10px;
            line-height: 1.5; /* Add this line */
          }
          
          .typewriter-content {
            width: 100%;
            white-space: pre-wrap;
            overflow-wrap: break-word;
            font-family: "Lato", sans-serif;
            font-size: 20px;
            line-height: 1.2;
            animation: typewriter 4s steps(30) 1s 1 normal both;
            animation-fill-mode: forwards;
          }
          
          @keyframes typewriter {
            from {
              width: 0;
            }
            to {
              width: 100%;
            }
          }
           
    </style>
</head>
<body>
  <div class="typewriter-container">
    <p class="typewriter-text" id="typewriter"><%= variableToDisplay %></p>
  </div>

  <script>
    const text = document.getElementById('typewriter').innerHTML;
document.getElementById('typewriter').innerHTML = '';

let i = 0;
const typing = setInterval(() => {
  document.getElementById('typewriter').innerHTML += text.charAt(i);
  i++;
  if (i >= text.length) {
    clearInterval(typing);
  }
}, 50);
  </script> 
  
</body>
</html>
